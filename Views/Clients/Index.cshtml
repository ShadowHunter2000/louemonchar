@model IEnumerable<Projet_Final.Models.Client>

@{
    ViewData["Title"] = "Index";
}

<h1>Liste Clients</h1>

<p>
    <a asp-action="Create">Créer nouveau client</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prénom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adresse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NuméroTéléphone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prénom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresse)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NuméroTéléphone)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientId">Modifier</a> |
                <a asp-action="Details" asp-route-id="@item.ClientId">Détails</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientId">Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
